
	<% if(papers){
	papers.forEach(function(paper,index) { %>
		<!-- <div class="row"> -->
		<div class="col-sm-12 col-md-12">
			<div class="panel panel-default">
			    <div class="panel-heading">
			    	<h1>
			    		<a href="/paper?author=<%= paper.author %>&title=<%= paper.title %>"><%= paper.title %></a>
			    	</h1>
			    </div>
			    <div class="panel-body">
			   		<p><%- paper.content %></p>
				    <div class="col-md-5 col-md-offset-6 ">
			        	<span class="badge">作者：</span>
			        	<a href="/user?name=<%= paper.author %>"><%= paper.author %></a>
						<span class="badge">
						<%=paper.time%>&nbsp;|&nbsp;阅读：<%=paper.pv%>&nbsp;|&nbsp;评论：<%=paper.comments.length%>
						</span>
						</p>
				    </div>
			  	</div>
			 </div>
		</div>
	<% })} %>
	<% include _index_pagination.ejs %>

