
<div class="container">
	<div class="row">
		<h1><%= user.name %>的个人主页</h1>
		<div class="col-md-8 col-md-offset-2">
			<% if(papers){ 
			papers.forEach(function(paper,index){ %>
			<div class="center-block">
				<h2><a href="/paper?author=<%= paper.author %>&title=<%= paper.title %>"><%= paper.title %></a></h2>
				<%- paper.content %>
				<ul>
					<li>作者：<a href="/user?name=<%= paper.author %>"></a></li>
					<li>日期：<%= paper.time %></li>
					<li>看过：<%= paper.pv %></li>
					<li>评论：<%= paper.comments.length %></li>
					<% if(user) {%>
						<li><a href="/userDelete?author=<%= paper.author %>&title=<%= paper.title %>">删除</a></li>
					<% } %>
				</ul>
			</div>
			<% })} %>
		</div>
		<div class="col-md-4"></div>
	</div>
	<nav class="col-md-offset-4">
	  <ul class="pagination">	
	    <li>
	    
	    <%if(!isFirst){%>
	      <a href="/?page=<% (pagenow-1) %>" aria-label="Previous">
	    <%}%>
	        <span aria-hidden="true">&laquo;</span>
	      </a>
	    </li>
	    <% for(var i = 0;i < total;i++) { %>
			<li><a href="/?page=<%= (i+1) %>"><%= (i+1) %></a></li>
		<% } %>
	    <li>
	    <%if(!isLast){%>
	      <a href="/?page=<%= (pagenow+1) %>" aria-label="Next">
	    <%}%>
	        <span aria-hidden="true">&raquo;</span>
	      </a>
	    </li>
	  </ul>
	</nav>
</div>