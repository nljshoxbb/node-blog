<!-- 个人信息展示区 -->
<div class="profile-navbar container-fluid">
	<div class="container">
		<div class="row">
		<div class="col-md-1 col-md-offset-1 profile-image "><img class="img-circle" src="/images/IMG_2587.PNG"></div>
		<div class="col-md-1 profile-name">@<%= user.name %></div>
			<div class="col-md-4 profile-navbar-items">
				<ul>
					<li><a href=""><span>吐槽</span><span>10</span></a></li>
					<li><a href=""><span>喜欢</span><span>5</span></a></li>
					<li><a href=""><span>关注</span><span>10</span></a></li>
