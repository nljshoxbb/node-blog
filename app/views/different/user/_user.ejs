				<a href="/user/setting">编辑个人资料</a>
			</div>
		</div>
	</div>
</div>
<!-- 文章展示区 -->
<div class="container profile-paper">
	<div class="row">
		<div class="col-md-7 col-md-offset-2">
			<div class="panel">
				<div class="panel-heading">
				<h4>吐槽</h4>
				</div>
			</div>
			<% if(papers){ 
			papers.forEach(function(paper,index){ %>
			<div class="panel">
				<div class="panel-heading">
					<h3>
						<a href="/paper/<%- paper._id%>">
							<%= paper.title %></a>
					</h3> 
					<!-- <i class="fa fa-user"></i> -->
					<a href="/user?name=<%= paper.author %>
						">
						<img src="/images/headImg.png" alt="" style="width: 40px;height: 40px;">
						<%= paper.author %></a>
					<%= paper.time%></div>
				<div class="panel-body">
					<p>
						<%- paper.content %></p>
					<div class="col-md-4 col-md-offset-2 ">
						&nbsp;|&nbsp; <i class="fa fa-eye"></i>
						<%=paper.pv%>
						&nbsp;|&nbsp;
						<a href="/paper/<%- paper._id%>/#comments">
							<i class="fa fa-comments"></i>
						</a>
						&nbsp;|&nbsp;
						<a class="uLdelete" data-id="<%- paper._id %>">删除</a>
					</div>
				</div>
			</div>
			<% })} %>
		</div>
		<div class="col-md-3">
			<div class="panel panel-default">
			  <div class="panel-body">
			    <h3>推荐关注</h3>
			    Panel content
			  </div>
			  <div class="panel-footer">在nljshoxbb上投放广告</div>
			</div>
		</div>
	</div>
	<% include _user_pagination.ejs %>
</div>
<script>
	$(function () {
		$('.uLdelete').on('click',function (event) {
			event.preventDefault();
			var target = $(event.target);
			var id = target.data('id');
			console.log(target.parents());

			$.ajax({
				type:'delete',
				url:'/user/paper/list?id=' + id
			})
			.done(function (result) {
				if (result.success === 1 && target.tagName === 'DIV') {

					
					
					var div = target.tagName.
					div.remove();
									
				}
			})
		})
	})
</script>