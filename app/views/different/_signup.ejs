<div class="container">
  <form id="signupForm" class="form-signin" action="" method="POST">
    <input class="form-control" id="signupName" type="text"  name="name" placeholder="账号" autofocus>
    <label for="signupName" class="error"></label><br/>
    <input id="signupPassword" type="password"  name="password" class="form-control" placeholder="密码">
    <label for="signupPassword" class="error"></label><br/>
    <input id="confirm_password" type="password"  name="confirm-password" class="form-control" placeholder="确认密码">
    <label for="confirm_password" class="error"></label><br/>
    <input id="email" class="form-control" type="email" name="email" placeholder="邮箱(仅支持qq和163)">
    <label class="error" for="email"></label><br/>
    <div class="checkbox">
      <label>
        <input type="checkbox" value="remember-me">记住我
      </label>
    </div>
    <button class="btn btn-lg btn-primary btn-block" type="submit">注册</button>
    <a href="/"><h5 class="center-block msg"></h5></a>
  </form>
</div>